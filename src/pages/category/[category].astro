---
// src/pages/category/[category].astro
import { getCollection } from 'astro:content';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';
import SearchHeader from '../../components/SearchHeader.astro';
import Footer from '../../components/Footer.astro';

// 1. Generate paths for every category found in your content
export async function getStaticPaths() {
  const allFoods = await getCollection('foods');
  
  // CHANGED: Use flatMap to find all unique categories used across the site
  const uniqueCategories = [...new Set(allFoods.flatMap((item) => item.data.category))];

  return uniqueCategories.map((category) => {
    // CHANGED: Filter checks if the array INCLUDES this category
    const categoryFoods = allFoods.filter((item) => item.data.category.includes(category));
    
    // Create slug (handle spaces like "Herbs and Spices")
    const slug = category.toLowerCase().replace(/\s+/g, '-');

    return {
      params: { category: slug },
      props: { categoryName: category, foods: categoryFoods },
    };
  });
}

const { categoryName, foods } = Astro.props;

const statusColors = {
  Safe: "bg-green-100 text-green-800 border-green-200",
  Caution: "bg-yellow-100 text-yellow-800 border-yellow-200",
  Toxic: "bg-red-100 text-red-800 border-red-200",
  Emergency: "bg-red-600 text-white border-red-800"
};
---

<html lang="en">
  <head>
    <GoogleAnalytics id="G-EYN5ZFZK56" />

    <title>Are {categoryName} Safe for Dogs? | Is It Safe?</title>
    <meta name="description" content={`List of ${categoryName} and their safety status for dogs.`} />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
  </head>
  <body class="bg-gray-50 min-h-screen font-sans flex flex-col">
    
    <SearchHeader />

    <main class="max-w-4xl mx-auto px-4 py-8 w-full flex-grow">
      
      <!-- Category Header -->
      <div class="mb-8 border-b pb-4">
        <a href="/" class="text-sm text-blue-500 hover:underline mb-2 inline-block">&larr; Home</a>
        <h1 class="text-4xl font-bold text-gray-900">{categoryName}</h1>
        <p class="text-gray-600 mt-2">
            Browse our database of {categoryName.toLowerCase()} to ensure your dog stays safe.
        </p>
      </div>

      <!-- Grid of Items -->
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {foods.map((food) => (
          <a 
            href={`/${food.slug}`} 
            class="block group bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden flex flex-col h-full"
          >
            <!-- Image Area -->
            <div class="aspect-video w-full overflow-hidden bg-gray-100 relative">
              {food.data.image ? (
                 <img 
                   src={food.data.image} 
                   alt={food.data.name} 
                   class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                 />
              ) : (
                <div class="flex items-center justify-center h-full text-gray-300 font-bold text-2xl">?</div>
              )}
              
              <!-- Status Badge -->
              <span class={`absolute top-2 right-2 px-3 py-1 rounded-full text-xs font-bold uppercase shadow-sm border ${statusColors[food.data.status]}`}>
                {food.data.status}
              </span>
            </div>

            <!-- Content Area -->
            <div class="p-5 flex flex-col flex-grow">
              <h2 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600">
                {food.data.name}
              </h2>
              <p class="text-gray-500 text-sm line-clamp-3 mb-4 flex-grow">
                {food.data.description}
              </p>
              <span class="text-blue-600 text-sm font-bold mt-auto group-hover:underline">
                Read full guide &rarr;
              </span>
            </div>
          </a>
        ))}
      </div>

    </main>

    <Footer />
  </body>
</html>