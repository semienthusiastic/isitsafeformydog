---
// src/components/AdPlaceholder.astro
// You can pass props to determine size
const { size = "rectangle" } = Astro.props;

const dimensions = size === "rectangle" 
  ? "w-[300px] h-[250px]" 
  : "w-[300px] h-[600px]";
---

<!-- The gray background reserves the space immediately -->
<div class={`mx-auto bg-gray-100 flex items-center justify-center border border-gray-200 my-8 ${dimensions}`}>
  <span class="text-xs text-gray-400 uppercase tracking-widest">Advertisement</span>
  <!-- Your Ad Script will inject the iframe here later -->
</div>